@using MvcStok.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index","Musterı",FormMethod.Get))
            {
                <p>
                    Aranacak Müşteri Adı: @Html.TextBox("p") 
                    <input type="submit" value="Ara" />
                </p>
            }
<table class="table table-bordered">
    <tr>
        <th>Müşteri ID</th>
        <th>Müşteri Ad</th>
        <th>Müşteri Soyad</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Alert</th>
    </tr>
    <tbody>
        @foreach (var mstr in Model)
        {
            <tr>
                <th>@mstr.MUSTERIID</th>
                <td>@mstr.MUSTERIAD</td>
                <td>@mstr.MUSTERISOYAD</td>
                <td><a href="/Musterı/Sil/@mstr.MUSTERIID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Musterı/MusteriGetir/@mstr.MUSTERIID" class="btn btn-success">Güncelle</a></td>
                <td>@Html.ActionLink("SİL", "Sil", new { id = mstr.MUSTERIID }, new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten Silmek İstiyor musunuz? ')" })</td>
            </tr>
        }
    </tbody>
</table>
<a href="/Musterı/YeniMusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>
